<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:id="root"
        fx:controller="com.example.game2048.Controllers.TileController"
        prefHeight="40.0"
        prefWidth="40.0"
        styleClass="tile"
>
    <Text
            fx:id="text"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            textAlignment="CENTER"
            wrappingWidth="180.0"
            textOrigin="CENTER"
    >
        <font>
            <Font
                    name="Arial Bold"
                    size="32.0"
            />
        </font>
    </Text>
</AnchorPane>
